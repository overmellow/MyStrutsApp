<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
   
<struts>

	<package name="auth" namespace="/auth" extends="struts-default">
		<action name="login">
			<result>/login.jsp</result>
		</action>
		
		<action name="doLogin" class="com.wv.mfaraji.mystrutsapp.action.AuthAction" method="doLogin">
			<result name="success" type="redirectAction">
				<param name="actionName">all</param>
				<param name="namespace">/notes</param>
			</result>
			<result name="login">/login.jsp</result>
		</action>
		
		<action name="doLogout" class="com.wv.mfaraji.mystrutsapp.action.AuthAction" method="doLogout">
			<result name="success">/logout.jsp</result>
		</action>
	</package>
	
</struts>  